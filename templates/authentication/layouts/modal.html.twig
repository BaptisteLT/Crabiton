{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/authentication/authentication_modal.scss') }}">
{% endblock %}

{% block body %}
    <div id="authentication_modal_wrapper">
        <div id="authentication_modal">
            <h1>
                {% if '/register' in app.request.pathinfo %}
                    Register
                {% else %}
                    Login
                {% endif %}
            </h1>

            {% block modal_content %}

            {% endblock %}

            {% if '/register' in app.request.pathinfo %}
                <a href="{{ path('app_login') }}">I have an account</a>
            {% else %}
                <a href="{{ path('app_register') }}">Create an account</a>
            {% endif %}
        </div>
    </div>
{% endblock %}